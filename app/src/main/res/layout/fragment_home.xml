<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <LinearLayout
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:cardCornerRadius="14dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/ivHeader"
                                android:src="@drawable/night"
                                android:scaleType="fitXY"/>
                            <!--                        <com.airbnb.lottie.LottieAnimationView-->
                            <!--                            app:lottie_loop="true"-->
                            <!--                            app:lottie_fileName="welcome.json"-->
                            <!--                            app:lottie_autoPlay="true"-->
                            <!--                            android:layout_width="match_parent"-->
                            <!--                            android:layout_height="match_parent">-->
                            <!--                        </com.airbnb.lottie.LottieAnimationView>-->
                            <TextView
                                android:layout_above="@+id/tvTgl"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvHeader"
                                android:text="Selamat Malam, Supriyadi"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/gotham"/>
                            <TextView
                                android:layout_alignParentBottom="true"
                                android:id="@+id/tvTgl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="Senin,10-September-2020"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/calibri"/>
                            <!--                        <ImageView-->
                            <!--                            android:layout_width="match_parent"-->
                            <!--                            android:layout_height="100dp"-->
                            <!--                            android:src="@drawable/logo_mandiri_putih"/>-->
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearPengguna"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/linearLaporanKerusakan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/rounded_menu">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/megaphone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="Laporan Kerusakan"
                                android:fontFamily="@font/roboto"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/rounded_menu"
                            android:layout_weight="1"
                            android:id="@+id/linearCheckLaporan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:layout_weight="1"
                                android:src="@drawable/report"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="Check Laporan"
                                android:fontFamily="@font/roboto"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearPelaksana"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:id="@+id/linearLaporanKerusakanPelaksana"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/rounded_menu">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/megaphone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="Laporan Kerusakan"
                                android:fontFamily="@font/roboto"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/rounded_menu"
                            android:layout_weight="1"
                            android:id="@+id/linearCheckLaporanPelaksana"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:layout_weight="1"
                                android:src="@drawable/report"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="Check Laporan"
                                android:fontFamily="@font/roboto"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



</LinearLayout>