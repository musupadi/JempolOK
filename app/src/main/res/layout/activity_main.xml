<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize">

    </FrameLayout>

    <com.luseen.spacenavigation.SpaceNavigationView
        android:layout_alignParentBottom="true"
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        app:active_item_color="@color/colorConcrete"
        app:centre_button_color="@color/centre_button_color"
        app:inactive_item_color="@color/colorGrey"
        app:space_background_color="@color/colorPrimary"
        app:active_centre_button_icon_color="@color/colorWhite"
        app:centre_button_icon="@drawable/ic_baseline_home_24"
        app:space_item_icon_size="@dimen/space_item_icon_default_size"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size" />

</RelativeLayout>