<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FormLaporanActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        app:lottie_loop="true"
        app:lottie_fileName="animation blue waves.json"
        app:lottie_autoPlay="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY">
    </com.airbnb.lottie.LottieAnimationView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <RelativeLayout
                    android:background="@drawable/round_background"
                    android:layout_width="40dp"
                    android:layout_margin="10dp"
                    android:layout_height="40dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:id="@+id/relativeBack">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_arrow_back_24"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Laporan Selesai"
                    android:gravity="center|left"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="14dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="14dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">
                            <Button
                                android:id="@+id/btnUpload"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pilih Gambar"
                                android:background="@drawable/btn_rounded_primary"
                                android:textColor="@color/colorWhite"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/roboto"/>
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_margin="10dp"
                                android:id="@+id/ivGambar"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama File"
                                android:id="@+id/tvGambar"
                                android:gravity="center"
                                android:fontFamily="@font/roboto"
                                android:visibility="gone"/>
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <Button
                                    android:textSize="10sp"
                                    android:layout_weight="1"
                                    android:id="@+id/btnTambah"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tambah Gambar"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginRight="5dp"/>
                                <Button
                                    android:textSize="10sp"
                                    android:layout_weight="1"
                                    android:id="@+id/btnHapusGambar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hapus Gambar"
                                    android:background="@drawable/btn_rounded_red"
                                    android:textColor="@color/colorWhite"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/roboto"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="14dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="14dp"
                        android:id="@+id/cardUpload2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">
                            <Button
                                android:id="@+id/btnUpload2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pilih Gambar"
                                android:background="@drawable/btn_rounded_primary"
                                android:textColor="@color/colorWhite"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/roboto"/>
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_margin="10dp"
                                android:id="@+id/ivGambar2"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama File"
                                android:id="@+id/tvGambar2"
                                android:gravity="center"
                                android:fontFamily="@font/roboto"
                                android:visibility="gone"/>
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <Button
                                    android:textSize="10sp"
                                    android:layout_weight="1"
                                    android:id="@+id/btnTambah2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tambah Gambar"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginRight="5dp"/>
                                <Button
                                    android:textSize="10sp"
                                    android:layout_weight="1"
                                    android:id="@+id/btnHapusGambar2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hapus Gambar"
                                    android:background="@drawable/btn_rounded_red"
                                    android:textColor="@color/colorWhite"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/roboto"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="14dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="14dp"
                        android:id="@+id/cardUpload3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">
                            <Button
                                android:id="@+id/btnUpload3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pilih Gambar"
                                android:background="@drawable/btn_rounded_primary"
                                android:textColor="@color/colorWhite"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/roboto"/>
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_margin="10dp"
                                android:id="@+id/ivGambar3"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama File"
                                android:id="@+id/tvGambar3"
                                android:gravity="center"
                                android:fontFamily="@font/roboto"
                                android:visibility="gone"/>
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <Button
                                    android:textSize="10sp"
                                    android:layout_weight="1"
                                    android:id="@+id/btnTambah3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tambah Gambar"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginRight="5dp"/>
                                <Button
                                    android:textSize="10sp"
                                    android:layout_weight="1"
                                    android:id="@+id/btnHapusGambar3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hapus Gambar"
                                    android:background="@drawable/btn_rounded_red"
                                    android:textColor="@color/colorWhite"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/roboto"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="14dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="14dp"
                        android:id="@+id/cardUpload4">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">
                            <Button
                                android:id="@+id/btnUpload4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pilih Gambar"
                                android:background="@drawable/btn_rounded_primary"
                                android:textColor="@color/colorWhite"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/roboto"/>
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_margin="10dp"
                                android:id="@+id/ivGambar4"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama File"
                                android:id="@+id/tvGambar4"
                                android:gravity="center"
                                android:fontFamily="@font/roboto"
                                android:visibility="gone"/>
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <Button
                                    android:textSize="10sp"
                                    android:layout_weight="1"
                                    android:id="@+id/btnTambah4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tambah Gambar"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginRight="5dp"/>
                                <Button
                                    android:textSize="10sp"
                                    android:layout_weight="1"
                                    android:id="@+id/btnHapusGambar4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hapus Gambar"
                                    android:background="@drawable/btn_rounded_red"
                                    android:textColor="@color/colorWhite"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/roboto"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/recycler"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:layoutAnimation="@anim/layout_animation"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="Submit"
                        android:id="@+id/btnSubmit"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/btn_rounded_primary"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>